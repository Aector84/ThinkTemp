>>>>>>> cf8ff60 (Remove watchdog logic after Fedora kernel update; restore stable fan control)
    threshold = DEFAULT_THRESHOLD

    fd = sys.stdin.fileno()
    old_settings = termios.tcgetattr(fd)
    tty.setcbreak(fd)

    try:
        with Live(build_layout(threshold), refresh_per_second=4, screen=True) as live:
            while True:
                live.update(build_layout(threshold))

                if select.select([sys.stdin], [], [], 0)[0]:
                    key = sys.stdin.read(1)

                    if key == "q":
                        write_fan("watchdog 0")
                        write_fan("level auto")
                        break

                    elif key == "a":
                        write_fan("watchdog 0")
                        write_fan("level auto")

                    elif key in "01234567":
                        write_fan("watchdog 0")
                        write_fan(f"level {key}")

                    elif key == "s":
                        write_fan("watchdog 0")
                        write_fan("level 1")

                    elif key == "b":
                        write_fan("watchdog 0")
                        write_fan("level 3")

                    elif key == "p":
                        write_fan("watchdog 0")
                        write_fan("level 6")

                time.sleep(0.1)

    finally:
        termios.tcsetattr(fd, termios.TCSADRAIN, old_settings)


