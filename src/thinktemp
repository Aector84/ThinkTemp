    body = Align.center(
        Columns([status_panel, controls_panel], equal=True, expand=False)
    )

    header = Align.center(Panel(ASCII_BANNER, expand=False))

    layout = Layout()
    layout.split_column(
        Layout(header, size=17),
        Layout(Padding(body, (1, 0, 0, 0)))
    )

    return layout


